{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs", 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@sockets/*": ["sockets/*"],
      "@utils/*": ["utils/*"],
    }
  }
}
